  border: 1px solid lightgrey;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
  border-bottom: none;
  padding-left: 16px;
  /*margin-top: 12px;
  padding-top: 8px;*/
  height: 48px;
  font-weight: bolder;
  display: flex;
  align-items: center;

}

.prescription-card .bottomcard {
  border: 1px solid lightgrey;
  border-bottom-left-radius: 16px;
  border-bottom-right-radius: 16px;
  border-top: none;
  padding-left: 16px;
  /*margin-top: 12px;
  padding-bottom: 12px;*/
  height: 48px;
  display: flex;
  align-items: center;
  color: white;
  background-color: rgb(255, 101, 30);
  text-align: middle;
}

.prescription-card-container {
  margin: 0 auto;
}

.prescription-card .middlecard {
  border: 1px solid lightgrey;
