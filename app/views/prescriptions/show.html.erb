<div class="color1">
  <div class="row justify-content-center mt-10">
    <div class="col-11 mb-2 mt-3">
      <div class="heading-color">
        <div class="conatainer mb-4">
          <h2> <%= @prescription.name %></h2>
        </div>
      </div>

      <div class="prescription-card-container">
        <div class="prescription-card">
          <div class="topcard">
            <%= @prescription.frequency %>
          </div>
          <div class="middlecard">
            <div>
              <%= @prescription.name %>
              <div>
                <b><%= @prescription.dose %></b>
              </div>
            </div>
          </div>
          <div class="middlecard">
            <%= @prescription.duration %>
          </div>
          <div class="bottomcard">
            <p>Amount: <%= humanized_money_with_symbol(@prescription.price) %></p>
          </div>
        </div>

        <%= form_tag orders_path do %>
          <%= hidden_field_tag 'prescription_id', @prescription.id %>
          <%= submit_tag 'Purchase', class: 'btn btn-ghost' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

