<div class="form-container">

  <h4>New Prescription</h4>

  <%= simple_form_for [@user, @prescription] do |f| %>
  <%= f.input :name %>
  <%= f.input :dose %>
  <%= f.input :frequency %>
  <%= f.input :duration, placeholder: 'how many days?' %>
  <%= f.input :price %>
  <%= f.input :sku %>
  <%= f.button :submit, value: 'Submit', class: 'btn-ghost-small' %>
  <% end %>
</div>
