<h3 class="container mb-5">Manage your prescriptions</h3>
<h5 class="container mb-3">Active prescriptions</h5>

  <% @prescriptions.each do |prescription| %>
    <div class="dashboard-card">
        <div class="appointment-card-2 border-bottom d-flex justify-content-between p-0">
          <p class="text-left p-3 m-0"><%= prescription.frequency %></p>
        </div>
        <div class="text-left p-3 m-0 border-bottom">
          <div>
            <h4><%= prescription.name %></h4>
            <b class="orange-text"><%= prescription.dose %></b>
          </div>
        </div>
        <div class="text-left p-3 m-0 border-bottom">
          <p class="m-0 appointment-summary">Usage</p>
          <%= prescription.duration %> days
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <div class="p-3 flex-fill buy-now">
            <p class="m-0 pb-2">Buy now</p>
            <%= link_to user_prescription_path(current_user, prescription) do %>
              <i class="fas fa-shopping-cart"> </i>
            <% end %>
          </div>
          <div class="p-3 w-50 set-reminder">
            <p class="m-0 pb-2">Set a reminder</p>
            <%= link_to user_prescription_path(current_user, prescription), method: "patch" do %>
              <i class="fas fa-bell"></i>
            <% end %>
          </div>
        </div>
    </div>
  <% end %>
