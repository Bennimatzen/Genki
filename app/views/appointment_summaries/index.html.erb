<div class="row justify-content-center mt-10">
  <div class="col-11 mb-2 mt-3">
    <div class="heading-color">
      <div class="conatainer mb-4">
<h3>Hi,  <%= current_user.first_name.capitalize %> here are your appointment letters:</h3>
      </div>
    </div>
  </div>
</div>

<br>

<% if @appointment_summaries.count > 0 %>
  <% @appointment_summaries.each do |summary| %>
    <% if summary.unread %>
      <%= link_to appointment_summary_path(summary) do %>
        <div class="unread-summary-card">
          <%= image_tag summary.appointment.doctor.user.photo, class: "avatar dropdown-toggle" %>
          <span>Dr. <%= summary.appointment.doctor.user.last_name %></span>
          <small><%= summary.appointment.start_date %></small>
        </div>
      <% end %>
    <% else %>
      <%= link_to appointment_summary_path(summary) do %>
        <div class="summary-card">
          <%= image_tag summary.appointment.doctor.user.photo, class: "avatar dropdown-toggle" %>
          <span>Dr. <%= summary.appointment.doctor.user.last_name %></span>
          <small><%= summary.appointment.start_date.day %>-<%= summary.appointment.start_date.month %>-<%= summary.appointment.start_date.year %></small>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
