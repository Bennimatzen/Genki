<h3 class="container my-3">Hi,  <%= current_user.first_name.capitalize %> here are your appointment letters:</h3>

<% if @appointment_summaries.count > 0 %>
  <% @appointment_summaries.each do |summary| %>
    <% if summary.unread %>
      <%= link_to appointment_summary_path(summary) do %>
        <div class="unread-summary-card">
          <%= image_tag summary.appointment.doctor.user.photo, class: "avatar dropdown-toggle" %>
          <span>Dr. <%= summary.appointment.doctor.user.last_name %></span>
          <small><%= summary.appointment.start_date.strftime("%b %d, %Y") %></small>
        </div>
      <% end %>
    <% else %>
      <%= link_to appointment_summary_path(summary) do %>
        <div class="summary-card">
          <%= image_tag summary.appointment.doctor.user.photo, class: "avatar dropdown-toggle" %>
          <span>Dr. <%= summary.appointment.doctor.user.last_name %></span>
          <small><%= summary.appointment.start_date.strftime("%b %d, %Y") %></small>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>

  <div class="cut text-center">
    __________________________
  </div>

