<div class="confirmation-container">
  <div class="confirmation-div">
    <div class="appointment-confirmation">
      <i class="fas fa-check"></i>
    </div>
    <div>
      <h1>Your appointment is all booked!</h1>
    </div>
  </div>
  <div class="appointment-card-mn-confirmation">
    <div class="dashboard-card">
      <div class="appointment-card-2 border-bottom d-flex justify-content-between pl-0 pr-0">
        <div class="p-3">
          <p class="NHS-register"><b><i>NHS</i></b> doctor</p>
          <p class="doctor-name">Dr. <%= @appointment.doctor.user.first_name %> <%= @appointment.doctor.user.last_name %></p>
          <p class="doctor-specialty"><%= @appointment.reason %></p>
        </div>
        <div class="p-3">
          <%= image_tag @appointment.doctor.user.photo, class: "avatar dropdown-toggle" %>
        </div>
      </div>
      <div class="d-flex justify-content-between border-bottom">
        <div class="text-center px-3 pl-3 py-3 flex-fill">
          <h6>Date</h6>
          <%= @appointment.start_date.strftime("%b %d, %y") %>
        </div>
        <div class="border-right border-left text-center px-3 py-3 flex-fill">
          <h6>Type</h6>
          <%= @appointment.appointment_type %>
        </div>
        <div class="text-center px-3 py-3 flex-fill">
          <h6>Time</h6>
            <%= @appointment.start_date.strftime("%l %M %p") %>
        </div>
      </div>
      <div class="appointment-card-4 p-3">
        <h6>Full records shared</h6>
        <p>Edit sharing</p>
      </div>
    </div>
  </div>
  <br>
  <div class="dashboard-card record-share">
    <div class="app-card-4 text-left">
        <%= simple_form_for [ @doctor, @appointment ] do |f| %>
          <%= f.input :record_share,
          wrapper: :custom_boolean_switch %>
        <% end %>
    </div>
  </div>
  <br>
  <div class="container">
     <%= link_to "My appointments", user_appointments_path(current_user), class: "btn btn-ghost"  %>
  </div>
  <br>
</div>
